<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" type="image/svg+xml" href="/assets/pika.svg" />
    <title>Message Board</title>
  </head>
  <body>
    <%- include("./partials/header.ejs") %>
    <h1 class="mainTitle">Messages list</h1>
    <ul class="msgsList">
      <% messages.forEach((msg) => { %>
      <li>
        <div class="message"><%= msg.message %></div>
        <% if (locals.isMember || locals.isAdmin) { %>
        <div class="author">Author: <%= msg.author %></div>
        <div class="createdAt">Created at: <%= msg.created_at %></div>
        <% } %> <% if (locals.isAdmin) { %>
        <form action="/delete/<%= msg.id %>" method="post">
          <button type="submit">Delete message</button>
        </form>
        <% } %>
      </li>
      <% }); %>
    </ul>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
